rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default: deny reads/writes by default. Specific collection matches below
    // override the rules as needed.
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }

    // artworks: public read. Allow anyone (including unauthenticated guests) to UPDATE
    // only the counter fields `artwork_liked` and `artwork_viewed` (must be
    // numeric). CREATE requires authentication; DELETE is denied.
    match /artworks/{artworkId} {
      allow read: if true;

      // Authenticated users may perform any write (create/update) as before.
      allow create: if request.auth != null;
      allow update: if request.auth != null
        // OR unauthenticated guest updates that only touch the counter fields
        || (
          request.auth == null
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['artwork_liked', 'artwork_viewed'])
          && (
            (!('artwork_liked' in request.resource.data) || request.resource.data.artwork_liked is int)
            && (!('artwork_viewed' in request.resource.data) || request.resource.data.artwork_viewed is int)
          )
        );

      // Prevent deletions by anyone via client rules.
      allow delete: if false;
    }

    // Keep other art-related collections write-protected to authenticated users.
    match /exhibitions/{exhibitionId} {
      // Writes require authentication (owners / admins)
      allow write: if request.auth != null;

      // Read rules:
      // - Unauthenticated guests may read public showcase exhibitions (isShowcase == true)
      // - Signed-in users may read exhibitions that belong to them AND are marked public (ownerId == uid && isPublic == true)
      allow get: if (
        request.auth == null && resource.data.isShowcase == true
      ) || (
        request.auth != null && resource.data.ownerId == request.auth.uid && resource.data.isPublic == true
      );

      // For list queries, require the client to include the equality filter
      // so Firestore can validate the query on the server side. Examples:
      // - Guest list: where('isShowcase','==', true)
      // - Owner list: where('ownerId','==', request.auth.uid) && where('isPublic','==', true)
      allow list: if (
        request.auth == null && request.query.where('isShowcase', '==', true)
      ) || (
        request.auth != null && request.query.where('ownerId', '==', request.auth.uid) && request.query.where('isPublic', '==', true)
      );
    }

    match /artists/{artistId} {
      allow write: if request.auth != null;
    }

    match /zones/{zoneId} {
      allow write: if request.auth != null;
    }
  }
}
